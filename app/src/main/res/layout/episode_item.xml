<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episode_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/episode_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/image_view_episode_description"
            android:src="@drawable/episodes_24dp"
            android:tint="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/episode_code_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:maxLines="1"
            android:padding="3dp"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/episode_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/episode_image"
            tools:text="@string/text_view_episode_code" />

        <TextView
            android:id="@+id/episode_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:maxLines="1"
            android:padding="3dp"
            android:text="@string/text_view_character_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorTextName"
            app:layout_constraintStart_toEndOf="@id/episode_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/episode_air_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:text="@string/text_view_episode_air_date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorTextName"
            app:layout_constraintStart_toEndOf="@id/episode_image"
            app:layout_constraintTop_toBottomOf="@id/episode_name_value" />

        <TextView
            android:id="@+id/episode_air_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:padding="3dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorTextName"
            app:layout_constraintBottom_toTopOf="@+id/episode_air_date"
            app:layout_constraintStart_toEndOf="@+id/episode_air_date"
            app:layout_constraintTop_toBottomOf="@+id/episode_air_date"
            tools:text="December 2, 2013" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>