<resources>

    <style name="RM.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <!--TextView style for character item name-->
    <style name="Widget.RM.TextView.Name.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/rm_grey_blue_900_alpha_60</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeMaxTextSize">17sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--ActionBar overflow button style-->
    <style name="Widget.RM.ActionButton.OverFlow.Filter" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter_list</item>
    </style>

    <!--ActionBar popup menu style-->
    <style name="Widget.RM.PopupMenu.Overflow" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <!--Bottom navigation toolbar style-->
    <style name="Widget.RM.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/bottom_nav_element</item>
        <item name="itemTextColor">@color/bottom_nav_element</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.RM.BottomNavigation</item>
    </style>

    <!--Button style-->
    <style name="Widget.RM.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">1dp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
