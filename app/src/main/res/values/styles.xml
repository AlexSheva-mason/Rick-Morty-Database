<resources>
    <!--TextView style for simple toolbar title-->
    <style name="Widget.RM.TextView.Toolbar.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <!--TextView style for character item name-->
    <style name="Widget.RM.TextView.Character.Name" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/rm_grey_blue_900_alpha_60</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingStart">@dimen/item_character_name_padding_start</item>
        <item name="android:paddingEnd">@dimen/item_character_name_padding_end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--ActionBar popup menu style-->
    <style name="Widget.RM.PopupMenu.Overflow" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <!--Bottom navigation toolbar style-->
    <style name="Widget.RM.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/bottom_nav_element</item>
        <item name="itemTextColor">@color/bottom_nav_element</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.RM.BottomNavigation</item>
    </style>

    <!--Toolbar style to work with light / dark theme-->
    <style name="Widget.RM.Toolbar.PrimarySurface" parent="@style/Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/colorPrimarySurface</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

</resources>
