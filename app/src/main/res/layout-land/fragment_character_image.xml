<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.character.CharacterImageFragment">

    <ImageView
        android:id="@+id/image_character"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/img_character_description"
        android:scaleType="centerCrop"
        android:src="@drawable/picasso_placeholder_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/background_share"
        android:clickable="true"
        android:contentDescription="@string/share_description"
        android:elevation="4dp"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/ic_share"
        app:layout_constraintEnd_toEndOf="@id/image_character"
        app:layout_constraintTop_toTopOf="@id/image_character" />

</androidx.constraintlayout.widget.ConstraintLayout>