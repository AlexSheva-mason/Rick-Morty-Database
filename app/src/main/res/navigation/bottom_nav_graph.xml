<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersListFragment">
    <fragment
        android:id="@+id/charactersListFragment"
        android:name="com.shevaalex.android.rickmortydatabase.ui.character.CharactersListFragment"
        android:label="List of Characters"
        tools:layout="@layout/fragment_characters_list">
        <action
            android:id="@+id/toCharacterDetailFragmentAction"
            app:destination="@id/characterDetailFragment2"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/episodesListFragment"
        android:name="com.shevaalex.android.rickmortydatabase.ui.episode.EpisodesListFragment"
        android:label="List of Episodes"
        tools:layout="@layout/fragment_episodes_list">
        <action
            android:id="@+id/toEpisodeDetailFragmentAction"
            app:destination="@id/episodeDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/locationsListFragment"
        android:name="com.shevaalex.android.rickmortydatabase.ui.location.LocationsListFragment"
        android:label="List of Locations"
        tools:layout="@layout/fragment_locations_list">
        <action
            android:id="@+id/toLocationDetailFragmentAction"
            app:destination="@id/locationDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <!--set the fragment's title to characters name passed as an argument-->
    <fragment
        android:id="@+id/characterDetailFragment2"
        android:name="com.shevaalex.android.rickmortydatabase.ui.character.CharacterDetailFragment"
        android:label="{character_name}"
        tools:layout="@layout/fragment_character_detail">
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="imageUrl"
            android:defaultValue="image_url"
            app:argType="string" />
        <argument
            android:name="character_name"
            android:defaultValue="Name"
            app:argType="string" />
        <argument
            android:name="character_status"
            android:defaultValue="Status"
            app:argType="string" />
        <argument
            android:name="character_species"
            android:defaultValue="Species"
            app:argType="string" />
        <argument
            android:name="character_type"
            android:defaultValue="zzz"
            app:argType="string" />
        <argument
            android:name="character_gender"
            android:defaultValue="Status"
            app:argType="string" />
        <argument
            android:name="character_origin"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="character_last_location"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/toEpisodeDetailFragmentAction2"
            app:destination="@id/episodeDetailFragment" />
        <action
            android:id="@+id/toLocationDetailFragmentAction2"
            app:destination="@id/locationDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="com.shevaalex.android.rickmortydatabase.ui.location.LocationDetailFragment"
        android:label="{location_name}"
        tools:layout="@layout/fragment_location_detail">
        <argument
            android:name="location_id"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="location_name"
            android:defaultValue="Name"
            app:argType="string" />
        <argument
            android:name="location_type"
            android:defaultValue="Type"
            app:argType="string" />
        <argument
            android:name="location_dimension"
            android:defaultValue="Dimension"
            app:argType="string" />
        <argument
            android:name="location_residents"
            android:defaultValue="zzz"
            app:argType="string" />
        <action
            android:id="@+id/toCharacterDetailFragmentAction3"
            app:destination="@id/characterDetailFragment2" />
    </fragment>
    <fragment
        android:id="@+id/episodeDetailFragment"
        android:name="com.shevaalex.android.rickmortydatabase.ui.episode.EpisodeDetailFragment"
        android:label="{episode_code}"
        tools:layout="@layout/fragment_episode_detail">
        <argument
            android:name="episode_name"
            android:defaultValue="Name"
            app:argType="string" />
        <argument
            android:name="episode_air_date"
            android:defaultValue="01/01/2020"
            app:argType="string" />
        <argument
            android:name="episode_code"
            android:defaultValue="Dimension"
            app:argType="string" />
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/toCharacterDetailFragmentAction2"
            app:destination="@id/characterDetailFragment2" />
    </fragment>
</navigation>